<section class="quality" id="assurance">
    <div class="container-fluid">
    <h4 class="topic-highlighter text-center">{{content.field_title_}}</h4>
    <div class="row">
        <div class="col-md-4">
            <p> {{content.field_body}} </p>
            <p class="text-green">Click on each phase to learn more</p>
            <div class="py-3 qa-steps">
                <img src="{{content.field_image.0}}" class="img-fluid">
                <span class="qa-steps1">{{ content.field_quality_assurance.0['#paragraph'].field_title_.0.value }}</span>
                <span class="qa-steps2">{{ content.field_quality_assurance.1['#paragraph'].field_title_.0.value }}</span>
                <span class="qa-steps3">{{ content.field_quality_assurance.2['#paragraph'].field_title_.0.value }}</span>
                <span class="qa-steps4">{{ content.field_quality_assurance.3['#paragraph'].field_title_.0.value }}</span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="quality-right">
                {{content.field_quality_assurance}}
            </div>
        </div>
    </div>
    </div>
</section>